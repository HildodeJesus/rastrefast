<header class="header">
  <div class="header--left">
    <ul class="nav">
      <li class="logo">
        <a href="/">
          <img src="/img/RastreFast.png" alt="Logo em branco e azul escrito RastreFast" width="160" height="50">
        </a>
      </li>
      <li class="link">
        <a href="/">Home</a>
      </li>
      <li class="link">
        <a href="/orders/salvos">Favoritos</a>
      </li>
      <li class="link">
        <a href="/sobre">Sobre</a>
      </li>
    </ul>
  </div>
  <div class="header--rigth">

    <% if(!user) { %>
    <ul class="nav">
      <li class="button">
        <a href="/login">Entre</a>
      </li>
      <li class="link">
        <a href="/cadastrar">Cadastra-se</a>
      </li>
    </ul>
    <% } else { %>
    <ul class="nav">
      <li class="link">
        <form class="link form-logout" action="/logout" method="get">
          <button class="btn-logout" type="submit"><%= user.email %></button>
        </form>
      </li>

    </ul>
    <% } %>

  </div>

  <script defer>
    const logoutBtn = document.getElementsByClassName('form-logout')[0]

    logoutBtn.addEventListener('submit', (e) => {
      e.preventDefault()
      const confirmation = confirm('Deseja sair da sua conta?')

      if (confirmation) e.target.submit()
    })
  </script>


</header>